{% extends "base.html.twig" %}

{% block title %}Авторизация{% endblock %}
{% block stylesheets %}
<style>

    body{
        font-family: 'Roboto', sans-serif;
    }

    .topnav {
        border-bottom: 1.5px solid;
        margin-bottom: 2em;
    }

    input {
        align:center;
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
    }

    .formDiv{
        width: 40%;
        margin-left: auto;
        margin-right: auto;
    }

    .loginBtn{
        color: white;
        padding: 0.8em 0.8em;
        background: #16AF4A ;
        border-radius: 1rem;
        border: none;
        width: 30%;
        margin: 1em auto;
        display:inline-block;
        font-size: 16px;
    }

    .regBtn{
        padding: 0.8em 0.8em;
        border-radius: 1rem;
        border: 2px solid #636564;
        color: black;
        text-decoration: none;
        display:inline-block;
        font-size: 16px;
    }

    hr {
        border: none;
        border-bottom: 2px solid #646B67;
        color: #646B67;
        height: 2px;
        width: 100%;
    }

</style>
{% endblock %}
{% block body %}
    <div class="topnav">
        <center> <h4 style="font-size: 25px">Musifind</h4></center>
    </div>
    {% for message in app.flashes('success') %}
            {{ message }}
    {% endfor %}


    <div class="formDiv">
        {{ form_start(form) }}
        {{ form_row(form.login) }}
        {{ form_row(form.password) }}
        <center>
            {{ form_row(form.submit) }}
        <div style="display: none">{{ form_rest(form) }}</div>
        <hr>
        <p align="center" style="color:black; font-size:20px;">
            Нет аккаунта?</p>
        <a class="regBtn" href="/register">Регистрация</a>
        </center>
        {{ form_end(form) }}

        {% for error in errors %}
            {{ error }}
        {% endfor %}
    </div>
{% endblock %}

