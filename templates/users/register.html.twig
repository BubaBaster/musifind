{% extends "base.html.twig" %}

{% block title %}Регистрация{% endblock %}
{% block stylesheets %}
    <style>

        body{
            font-family: 'Roboto', sans-serif;
        }

        .topnav {
            border-bottom: 1.5px solid;
            margin-bottom: 2em;
        }

        input {
            align:center;
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
        }

        .formDiv{
            width: 40%;
            margin-left: auto;
            margin-right: auto;
        }

        .loginBtn{
            color: white;
            padding: 1em 1em;
            margin-top: 1em;
            margin-bottom: 1em;
            background: #16AF4A ;
            border-radius: 1rem;
            border: none;
            width: 30%;
            margin-right: auto;
            margin-left: auto;
            text-decoration: none;
            display:inline-block;
            font-size: 16px;
        }

        .regBtn{
            padding: 0.5em 0.5em;
            border-radius: 1rem;
            border: 2px solid;
            border-color: #636564;
            color: black;
            text-decoration: none;
            display:inline-block;
            font-size: 16px;
        }

        hr {
            border: none;
            border-bottom: 2px solid #646B67;
            color: #646B67;
            height: 2px;
            width: 100%;
        }

    </style>
{% endblock %}
{% block body %}
    <div class="topnav">
        <center> <h4 style="font-size: 25px">Musifind</h4></center>
    </div>
    {% for message in app.flashes('success') %}
        {{ message }}
    {% endfor %}

    <div class="formDiv">
        {{ form_start(form) }}
        {{ form_row(form.login) }}
        {{ form_row(form.fullName) }}
        {{ form_row(form.password) }}
        {{ form_row(form.password_confirm) }}
        <center>{{ form_row(form.submit) }}
        {{ form_end(form) }}
            <hr>
        <p align="center" style="color:black; font-size:20px;">
            Уже есть аккаунт?</p>
        <a class="regBtn" href="/login">Войти в аккаунт</a> </center>
        {% for error in errors %}
            {{ error }}
        {% endfor %}
    </div>
{% endblock %}