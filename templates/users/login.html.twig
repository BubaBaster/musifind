{% extends "base.html.twig" %}

{% block title %}Авторизация{% endblock %}
{% block stylesheets %}
<style>

    body{
        font-family: 'Roboto', sans-serif;
    }

    .topnav {
        border-bottom: 1.5px solid;
        margin-bottom: 2em;
    }

    input {
        align:center;
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
    }

    .formDiv{
        width: 40%;
        margin-left: auto;
        margin-right: auto;
    }

    .loginBtn{
        color: white;
        background: #16AF4A ;
        border-radius: 1rem;
    }

    .regBtn{
        padding: 0.5em 0.5em;
        border-radius: 1rem;
        border: 2px solid;
        border-color: #636564;
        color: black;
        text-decoration: none;
    }

</style>
{% endblock %}
{% block body %}
    <div class="topnav">
        <center> <h4>Musifind</h4></center>
    </div>
    {% for message in app.flashes('success') %}
            {{ message }}
    {% endfor %}

    <div class="formDiv">
        {{ form_start(form) }}
        {{ form_row(form.login) }}
        {{ form_row(form.password) }}
        {{ form_row(form.submit) }}
        {{ form_end(form) }}
        {% for error in errors %}
            {{ error }}
        {% endfor %}
    </div>
{% endblock %}

